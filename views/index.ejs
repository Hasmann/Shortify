<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />

    <link rel="shortcut icon" href="/img/link.png" type="image/png" />

    <title>Link Shrinker</title>
  </head>
  <body>
    <div class="container">
      <h1>URL Shrinker</h1>
      <label style="float: left" class="switch">
        <input type="checkbox" />
        <span class="slider"></span>
      </label>
      <form action="/shortUrls" method="POST" class="my-4 form-inline">
        <label for="fullUrl" class="sr-only">Url</label>
        <input
          required
          placeholder="Url"
          type="url"
          name="fullUrl"
          id="fullUrl"
          class="form-control col mr-2"
        />
        <button
          style="background-color: 'red'"
          class="btn btn-success"
          type="submit"
        >
          Generate
        </button>
      </form>

      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th>Full URL</th>
            <th>Short URL</th>
            <th>Clicks</th>
            <th>COPY</th>
          </tr>
        </thead>
        <tbody>
          <% linkRes.forEach(shortUrl => { %>
          <tr>
            <td>
              <a href="<%= shortUrl.full %>"><%= shortUrl.full %></a>
            </td>
            <td class="copy">
              <a href="<%= shortUrl.short %>"><%= shortUrl.short %></a>
            </td>
            <td><%= shortUrl.clicks %></td>
            <td><button class="copy">COPY LINK</button></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <script defer>
      const copyText = document.querySelector(".copy");
      const tbody = document.querySelector("tbody");
      const mcop = document.querySelector(".mcop");
      tbody.addEventListener("click", function (e) {
        if (e.target.classList.contains("copy")) {
          const cop = e.target
            .closest("tr")
            .children[1].children[0].closest("a").innerHTML;

          /* Copy the text inside the text field */
          navigator.clipboard.writeText(`http://localhost:7000/${cop}`);

          /* Alert the copied text */
          alert("COPIED TO CLIPBOARD: " + cop);
        }
      });
      alert("HELLOOOO");
    </script>
  </body>
</html>
